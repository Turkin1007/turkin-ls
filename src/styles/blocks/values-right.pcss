.values__right {
  width: 37%;
  display: flex;
  align-items: center;
  position: relative;

  @include laptop {
    width: 100%;
    height: 270px;
    margin-top: 40px;
  }
}

.backpack__img {
  max-width: 100%;
  height: auto;
  @include desktop {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%)
  }
}