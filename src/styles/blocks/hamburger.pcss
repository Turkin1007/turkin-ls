.hamburger__menu-link {
	vertical-align: middle;
	position: relative;
	height: 22px;
	align-items: center;
	margin-left: 30px;
	display: none;
	background: none;
	border: none;

	@include laptop {
		display: inline-flex;
	}
}

.hamburger__menu-link__bars {
	&, &:before, &:after {
		background: #414c63;
		width: 24px;
		height: 4px;
	}

	&:before, &:after {
		content: " ";
		display: block;
		position: absolute;
	}

	&:before {
		top: 0;
	}

	&:after {
		bottom: 0;
	}
}