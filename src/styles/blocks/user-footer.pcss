.user-footer__name {
  font-weight: 700;
  font-size: 18px;
  color: white;
  margin-top: 10px;
  margin-bottom: 20px;
  display: flex;
  flex-wrap: wrap;
  width: 50%;

  @include desktop {
    width: 30%;
  }

  @include phones {
    width: 100%;
  }
}

.user-footer__desc {
  display: flex;
  flex-wrap: wrap;

  @include desktop {
    width: 80%;
  }

  @include laptop {
    width: 60%;
  }

  @include tablets {
    width: 100%;
  }

  @include phones {
    width: 50%;
  }

}