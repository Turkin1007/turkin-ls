.works {
  position: relative;
  padding-bottom: 150px;
}

.works__content {
  padding-bottom: 60px;
  @include phones {
    padding-bottom: 0px;
  }
}

.works__container {
  @include phones {
    width: 100%;
  }
}

.works__section-title {
  @include phones {
    text-align: center;
    margin-bottom: 30px;
  }
}

.works__title {
  font-size: 36px;
  font-weight: 700;
  margin-bottom: 60px;
}

.works__container {
  width: 84%;
  display: flex;
  flex-direction: column;
  margin:0 auto;
}